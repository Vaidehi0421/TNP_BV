<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Register a Comapny</h1>
    <div class="col-6 offset-3">
        <form action="/register/company" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" id="name" name="company[name]"class="form-control" >
            </div>
            <div class="mb-3">
                <label for="username" class="form-label">Email</label>
                <input type="text" id="username" name="company[username]"class="form-control" >
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input  class="form-control" type="password" id="password" name="password" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="cname">Comapny's name</label>
                <input class="form-control" name="company[cname]" id="cname" required></input>
            </div>
            <div class="mb-3">
                <label class="form-label" for="contact_number">Contact Number</label>
                <input  class="form-control" type="text" id="contact_number" name="company[contact_number]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="company_description">Company's description</label>
                <textarea class="form-control" id="company_description" name="company[company_description]" cols="20" rows="5" required></textarea>
            </div>

            <div class="mb-3 mt-3">
                <button class="btn btn-success">Register</button>
            </div>
        </form>
        <form action="/login">
            <h6>Already a User?</h6>
            <button class="btn btn-info mb-3">Log In</button>
        </form>
    </div>
</div>