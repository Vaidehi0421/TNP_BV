<% layout('layouts/boilerplate')%>
    <h1>All Jobs</h1>
    <% for(let job of jobs ) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-8 mb-3">
                <div class="card-body">
                    <h5 class="card-title">Job title: <%= job.title %> </h5>
                    <p class="card-text">
                        <small class="text-muted">Marks criteria: <%= job.marks_criteria%></small>
                    </p>
                    <a class="btn btn-primary" href="/jobs/<%=job._id%>">View <%=job.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
    <%if(currentUser.user_role==='Company') {%>
    <div > 
        <a class="btn btn-info mt-3 mb-3" href="jobs/new">ADD A NEW JOB</a>
    </div>
    <%}%>